{
  "name": "rollup-configured",
  "version": "0.0.1",
  "description": "rollup config for building modern apps and libraries",
  "author": {
    "name": "Your Name",
    "email": "yourname@domain.com"
  },
  "contributors": [
    {
      "name": "Your Name",
      "email": "yourname@domain.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/iosio/rollup-config-modern.git"
  },
  "license": "MIT",
  "main": "index.js",
  "module": "index.js",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib",
    "src"
  ],
  "keywords": [
    "rollup",
    "config",
    "modern"
  ],
  "scripts": {
    "start": "rollup -c index.js -w --environment preset:dev,env:dev",
    "start_demo": "rollup -c -w --environment project:demo",
    "build": "rollup -c --environment preset:build_app,env:prod",
    "build_demo": "rollup -c --environment preset:build_app,project:demo",
    "build_lib": "rollup -c --environment project:myModule",
    "serve": "serve -s build",
    "test": "jest --config config/jest.js"
  },
  "rollupConfig": {
    "project": {
      "demo": {
        "preset": "dev",
        "env": "dev",
        "input": "demo/src/index.js",
        "html": "demo/src/index.html",
        "output": "demo/build",
        "copyFiles": [
          "demo/src/favicon.ico"
        ]
      },
      "myModule": {
        "preset": "lib",
        "input": "src/**/*.js"
      }
    },
    "devServer": {},
    "alias": {
      "react": "preact/compat",
      "react-dom": "preact/compat"
    },
    "APP_ENVS": {
      "dev": {
        "API_URL": "http://your-api-dev.com/api"
      },
      "prod": {
        "API_URL": "http://your-api.com/api"
      }
    }
  },
  "dependencies": {
    "preact": "^10.3.4"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "7.7.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-syntax-import-meta": "^7.8.3",
    "@babel/plugin-transform-react-jsx": "^7.7.7",
    "@babel/plugin-transform-regenerator": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-modules": "^0.1.3",
    "@rollup/plugin-alias": "^3.0.1",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@rollup/plugin-replace": "^2.3.1",
    "@rollup/plugin-url": "^4.0.2",
    "autoprefixer": "^9.7.4",
    "babel-jest": "^25.1.0",
    "babel-plugin-bundled-import-meta": "^0.3.2",
    "babel-plugin-jcss": "^1.0.3",
    "babel-plugin-macros": "^2.8.0",
    "babel-plugin-minify-tagged-templates": "^1.0.1",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "cssnano": "^4.1.10",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^25.1.0",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "jest-preset-preact": "^1.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.0.3",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-filesize": "^6.2.1",
    "rollup-plugin-index-html": "^1.10.2",
    "rollup-plugin-livereload": "^1.0.4",
    "rollup-plugin-postcss": "^2.4.1",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-terser": "^5.3.0",
    "serve": "^11.3.0",
    "tiny-glob": "^0.2.6"
  },
  "browserslist": [
    "last 2 Chrome major versions",
    "last 2 ChromeAndroid major versions",
    "last 2 Firefox major versions",
    "last 2 Edge major versions",
    "last 2 Safari major versions",
    "last 2 iOS major versions"
  ]
}
